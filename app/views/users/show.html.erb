<% provide(:title,@user.name) %>
<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
        <h1>
            <%= gravatar_for @user %>
            <%= @user.name %>
        </h1>
        </section>
        <section class="stats">
            <%= render 'shared/stats' %>
        </section>
    </aside>
    <div class="col-md-8">
        <% if logged_in? && @user.id != current_user.id %>
            <%= render 'follow_form' %>
        <% end %>
        <% if @user.microposts.any? %>
            <div class="search_form">
                <%= render 'microposts/microposts_search_form' %>
            </div>
            <h3>Microposts(<%= @user.microposts.count %>)</h3>
            <ol class="microposts">
                <%= render @microposts %>
            </ol>
            <%= will_paginate @microposts %>
        <% end %>
    </div>
</div>
